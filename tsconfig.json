{
    "version": "2.0.2",
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist",
      "lib": ["es5", "es6"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "pretty": true,
      "sourceMap": true,
      "strict": true,
      "strictFunctionTypes": false,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
    },
    "include": ["./src/**/*"]
  }